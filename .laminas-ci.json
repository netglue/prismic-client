{
    "extensions": [
        "apcu"
    ],
    "ini": [
        "apc.enabled=1",
        "apc.enable_cli=1"
    ],
    "additional_checks": [
        {
            "name": "Coverage",
            "job": {
                "command": "composer test-coverage && bash <(curl -s https://codecov.io/bash)",
                "extensions": [
                    "apcu",
                    "pcov"
                ],
                "ini": [
                    "apc.enabled=1",
                    "apc.enable_cli=1"
                ]
            }
        }
    ]
}
