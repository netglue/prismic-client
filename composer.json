{
    "name": "netglue/prismic-client",
    "description": "PHP API Client for Prismic.io",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Prismic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrismicTest\\": "test/Unit",
            "PrismicSmokeTest\\": "test/Smoke",
            "Prismic\\Example\\": "samples"
        }
    },
    "require": {
        "php": ">= 7.3",
        "ext-json": "*",
        "laminas/laminas-escaper": "^2.6",
        "php-http/discovery": "^1.7",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "symfony/polyfill-php80": "^1.17"
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-apcu": "*",
        "doctrine/coding-standard": "^7.0",
        "laminas/laminas-diactoros": "^2.3",
        "php-http/cache-plugin": "^1.7",
        "php-http/curl-client": "^2.1",
        "php-http/mock-client": "^1.3",
        "phpunit/phpunit": "^9.1",
        "psr/cache": "^1.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/cache": "^5.1"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always --testsuite=\"Unit Tests\"",
        "test-coverage": "phpunit --colors=always --testsuite=\"Unit Tests\" --coverage-html build/report",
        "serve": "php -S 0.0.0.0:8080 -t samples samples/document-explorer.php"
    }
}
